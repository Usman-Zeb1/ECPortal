@model List<Pk.Com.Jazz.ECP.Models.EmployeePerformance>

@{
    ViewData["Title"] = "Performance Dashboard";
}

<h1 class="text-center my-4">Performance Dashboard</h1>

<div class="container">
    <div class="card mb-4">
        <div class="card-header">
            <h3 class="mb-0">Performance Trend</h3>
        </div>
        <div class="card-body">
            <canvas id="performanceChart" width="600" height="300"></canvas>
            @if (Model == null || Model.Count == 0)
            {
                <div class="text-center mt-2">No performance data available for chart.</div>
            }
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h3 class="mb-0">Performance Details</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive" style="height: 400px;">
                <table id="performanceTable" class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Performance Date</th>
                            <th>Score</th>
                            <th>Comments</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var performance in Model)
                            {
                                <tr>
                                    <td>@(performance.PerformanceStartDate != null ? performance.PerformanceStartDate.ToShortDateString() : "")</td>
                                    <td>@performance?.PerformanceScore</td>
                                    <td>@performance?.Comments</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center">No performance data available.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#performanceTable').DataTable({
                "paging": true,
                "pageLength": 5,
                "lengthChange": false,
                "info": false
            });
        });

        document.addEventListener('DOMContentLoaded', function () {
            var ctx = document.getElementById('performanceChart').getContext('2d');
            var performanceDates = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model?.Select(f => f.PerformanceStartDate.ToShortDateString()).ToList() ?? new List<string>()));
            var performanceScores = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model?.Select(f => f.PerformanceScore).ToList() ?? new List<int>()));

            var performanceChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: performanceDates,
                    datasets: [{
                        label: 'Performance Score',
                        data: performanceScores,
                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        x: {
                            title: {
                                display: true,
                                text: 'Date'
                            },
                            ticks: {
                                maxRotation: 90,
                                minRotation: 45
                            }
                        },
                        y: {
                            title: {
                                display: true,
                                text: 'Performance Score'
                            },
                            min: 0,
                            beginAtZero: true
                        }
                    },
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top'
                        },
                        tooltip: {
                            callbacks: {
                                title: function (context) {
                                    return context[0].label;
                                },
                                label: function (context) {
                                    return `Score: ${context.raw}`;
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
}
