@using Pk.Com.Jazz.ECP.ViewModels;
@model DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex flex-column align-items-center bg-light py-5">
    <div class="container-fluid">
        <h1 class="text-center my-4 display-4 text-black">Employee Dashboard</h1>

        <div class="container">
            <!-- Employee Details -->
            <a href="Identity/Account/Manage" class="text-decoration-none">
                <div class="card mb-4 shadow-sm border-0">
                    <div class="card-header bg-black text-white">
                        <h3 class="mb-0"><i class="fas fa-user"></i> Employee Details</h3>
                    </div>
                    <div class="card-body text-black">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <p><strong>Name:</strong> @Model.Employee?.EmployeeName</p>
                                <p><strong>Employee Number:</strong> @Model.Employee?.EmployeeNumber</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>User Login:</strong> @Model.Employee?.UserAdLogin</p>
                                <p><strong>Date of Joining:</strong> @Model.Employee?.DOJ</p>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <p><strong>Experience Center ID:</strong> @Model.EC?.ECID</p>
                                <p><strong>Role Name:</strong> @Model.Role</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Experience Center Address:</strong> @Model.EC?.PhysicalAddress</p>
                                <p><strong>Experience Center Region:</strong> @Model.EC?.ECRegion?.ECRegionName</p>
                            </div>
                        </div>
                    </div>
                </div>
            </a>

            <div class="row">
                <!-- Employee Commissions Summary -->
                <div class="col-md-6 col-lg-4 mb-4">
                    <a href="@Url.Action("Index", "Commissions")" class="text-decoration-none">
                        <div class="card shadow-sm h-100 border-0">
                            <div class="card-header bg-red text-white">
                                <h5 class="mb-0"><i class="fas fa-coins"></i> Commissions</h5>
                            </div>
                            <div class="card-body text-black">
                                <p><strong>Total:</strong> @Model.EmployeeCommissionsCount</p>
                                <p><strong>Last Date:</strong> @Model.LastCommissionDate?.ToShortDateString()</p>
                            </div>
                        </div>
                    </a>
                </div>

                <!-- Employee Feedback Summary -->
                <div class="col-md-6 col-lg-4 mb-4">
                    <a href="@Url.Action("Index", "Feedbacks")" class="text-decoration-none">
                        <div class="card shadow-sm h-100 border-0">
                            <div class="card-header bg-red text-white">
                                <h5 class="mb-0"><i class="fas fa-comments"></i> Feedbacks</h5>
                            </div>
                            <div class="card-body text-black">
                                <p><strong>Total:</strong> @Model.EmployeeFeedbacksCount</p>
                                <p><strong>Last Date:</strong> @Model.LastFeedbackDate?.ToShortDateString()</p>
                            </div>
                        </div>
                    </a>
                </div>

                <!-- Employee Trainings Summary -->
                <div class="col-md-6 col-lg-4 mb-4">
                    <a href="@Url.Action("Index", "Trainings")" class="text-decoration-none">
                        <div class="card shadow-sm h-100 border-0">
                            <div class="card-header bg-red text-white">
                                <h5 class="mb-0"><i class="fas fa-chalkboard-teacher"></i> Trainings</h5>
                            </div>
                            <div class="card-body bg-gray text-black">
                                <p><strong>Total:</strong> @Model.EmployeeTrainingsCount</p>
                                <p><strong>Last Date:</strong> @Model.LastTrainingDate?.ToShortDateString()</p>
                            </div>
                        </div>
                    </a>
                </div>

                <!-- Employee Recognitions Summary -->
                <div class="col-md-6 col-lg-4 mb-4">
                    <a href="@Url.Action("Index", "Recognitions")" class="text-decoration-none">
                        <div class="card shadow-sm h-100 border-0">
                            <div class="card-header bg-red text-white">
                                <h5 class="mb-0"><i class="fas fa-award"></i> Recognitions</h5>
                            </div>
                            <div class="card-body bg-grey text-black">
                                <p><strong>Total:</strong> @Model.EmployeeRecognitionsCount</p>
                                <p><strong>Last Date:</strong> @Model.LastRecognitionDate?.ToShortDateString()</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
        color: #343a40;
    }

    .text-dark {
        color: #343a40 !important;
    }

    .text-white {
        color: #fff !important;
    }

    .text-yellow {
        color: #ffc107 !important;
    }

    .bg-light {
        background-color: #f8f9fa !important;
    }

    .bg-dark {
        background-color: #343a40 !important;
    }

    .bg-black {
        background-color: #000 !important;
    }

    .bg-red {
        background-color: #a20a0e !important;
    }

    .shadow-sm {
        box-shadow: 0 .125rem .25rem rgba(0, 0, 0, .075) !important;
    }
</style>
