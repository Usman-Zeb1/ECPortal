@using System.Text.Encodings.Web
@model IEnumerable<AppUserToken>

@if (Model.Count() > 0)
{
    <div class="table-responsive">
        <table id="datatable" class="table table-hover table-sm">
            <caption>List of Tokens</caption>
            <thead class="thead-light">
                <tr>
                    <th data-bs-toggle="tooltip" data-bs-placement="top" title="@Html.DisplayDescriptionFor(model => model.AppUserTokenId)">
                        @Html.DisplayShortNameFor(model => model.AppUserTokenId)
                    </th>
                    <th data-bs-toggle="tooltip" data-bs-placement="top" title="@Html.DisplayDescriptionFor(model => model.UserAdLogin)">
                        @Html.DisplayShortNameFor(model => model.UserAdLogin)
                    </th>
                    <th data-bs-toggle="tooltip" data-bs-placement="top" title="@Html.DisplayDescriptionFor(model => model.Token)">
                        @Html.DisplayNameFor(model => model.Token)
                    </th>
                    <th data-bs-toggle="tooltip" data-bs-placement="top" title="@Html.DisplayDescriptionFor(model => model.TokenType)">
                        @Html.DisplayNameFor(model => model.TokenType)
                    </th>
                    <th data-bs-toggle="tooltip" data-bs-placement="top" title="@Html.DisplayDescriptionFor(model => model.EntryDate)"> 
                        @Html.DisplayNameFor(model => model.EntryDate)
                    </th>
                    <th data-bs-toggle="tooltip" data-bs-placement="top" title="Action Pages">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>
                            <span class="badge rounded-pill bg-light text-dark"> @Html.DisplayFor(modelItem => item.AppUserTokenId)</span>
                        </th>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserAdLoginShort)
                        </td>
                        <td>
                            <a href="@item.Token">Click to activate</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TokenType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EntryDate)
                        </td>
                        <td>
                            <a asp-controller="AppUserTokens" asp-action="Details" asp-route-id="@item.AppUserTokenId"><span class="badge rounded-pill bg-theme text-light">Details</span></a>
                            <a asp-controller="AppUserTokens" asp-action="Delete" asp-route-id="@item.AppUserTokenId"><span class="badge rounded-pill bg-light text-dark">Delete</span></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center">
        <img src="~/images/norecordfound-600px.png" height="300" alt="welcome image">
        <p><em>No records found</em></p>
    </div>
}
