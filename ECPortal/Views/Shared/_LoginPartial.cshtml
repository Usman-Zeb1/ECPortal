@using Microsoft.AspNetCore.Identity
@using Pk.Com.Jazz.ECP.Data
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {

        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-sm btn-outline-warning" data-bs-toggle="tooltip" data-bs-placement="top" title="Logout user @User.Identity.Name!">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li>
            <div class="btn-group" role="group">
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-warning" style="color:white">Register</a>
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-warning">Login</a>
            </div>
        </li>
    }
</ul>
