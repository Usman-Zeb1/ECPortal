@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Muhammad Usman Zeb/CX/ISB">
    <meta name="application-name" content="Experience Center Portal">
    <meta name="description" content="Experience Center portal for Agents">
    <meta name="generator" content="EC v1 1.0">
    <meta name="keywords" content="ec,ecp">
    <title>@ViewData["Title"] - Experience Center</title>

    <!--bootstrap css-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css"
          integrity="sha512-GQGU0fMMi238uA+a/bdWJfpUGKUkBdgfFdgBm72SUQ6BeyWjoY/ton0tEjH+OSH9iP4Dfh+7HM0I9f5eR0L/4w=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />


    <link rel="stylesheet" href="~/css/form.css" />
    <!--font awesome css-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    <!--global styles-->
    <link rel="stylesheet" href="~/css/site.css" />
    <!--section styles-->
    @await RenderSectionAsync("Styles", required: false)
    <!--jquery js-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
            integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
            crossorigin="anonymous"
            referrerpolicy="no-referrer"></script>

    <!--popper js-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"
            integrity="sha512-oBqDVmMz4fnFO9gybII3sA0F5tnaQQK8YJgd0QkB1EQ2kKFyShZzA6y4eJpKA5kM23yLGkGAf/6r9ExNHW11w=="
            crossorigin="anonymous"
            referrerpolicy="no-referrer"></script>
    <!--bootstrap js-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/js/bootstrap.bundle.min.js"
            integrity="sha512-pax4MlgXjHEPfCwcJLQhigY7+N8rt6bVvWLFyUMuxShv170X53TRzGPmPkZmGBhk+jikR8WBM4yl7A9WMHHqvg=="
            crossorigin="anonymous"
            referrerpolicy="no-referrer"></script>
    <!--global script-->
    <script src="~/js/site.js?v=@Guid.NewGuid()"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
    

    <!-- Scripts -->

    <style>
        .dropdown-item .fas {
            width: 20px; /* or adjust as needed */
            text-align: center;
        }

    </style>

    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <header>

    @if(SignInManager.IsSignedIn(User))
    {
        if (User.IsInRole("Agent"))
        {
            <partial name="~/Views/Shared/Navigations/_AgentNav.cshtml" />
        }
        else if (User.IsInRole("RCCH"))
        {
            <partial name="~/Views/Shared/Navigations/_RCCHNav.cshtml" />
        }
        else if (User.IsInRole("HOD"))
        {
            <partial name="~/Views/Shared/Navigations/_HODNav.cshtml" />
        }
        else if (User.IsInRole("ECM"))
        {
            <partial name="~/Views/Shared/Navigations/_ECMNav.cshtml" />
        }
        else if (User.IsInRole("Admin"))
        {
            <partial name="~/Views/Shared/Navigations/_AdminNav.cshtml" />
        }
        else if (User.IsInRole("TeamLead"))
        {
            <partial name="~/Views/Shared/Navigations/_TeamLeadNav.cshtml" />
        }
        else if (User.IsInRole("Trainer"))
        {
                <partial name="~/Views/Shared/Navigations/_TrainerNav.cshtml" />
         }
        else if (User.IsInRole("OPG"))
            {
                <partial name="~/Views/Shared/Navigations/_OPGNav.cshtml" />
            }
        }
    
    else
    {
        <partial name="~/Views/Shared/Navigations/_UnverifiedNav.cshtml"/>
    }


    </header>
    
    <div class="content">
        <section class="container">
            <partial name="_PushMessage" />
        </section>
        <main role="main" class="container pb-5">
            @RenderBody()
        </main>
        <footer class="border-top footer text-muted">
            <div class="container">
                <small>
                    &copy; @DateTime.Now.Year - EC - All Rights Reserved
                    @* <a asp-area="" asp-controller="Home" asp-action="Feedback">Feedback</a> -
                    <a asp-area="" asp-controller="Home" asp-action="Issue">Report an Issue</a> *@
                </small>
            </div>
        </footer>
    </div>
    <!--section script-->
    @await RenderSectionAsync("Scripts", required: false)
</body>



</html>
