@model Employee


@using Microsoft.AspNetCore.Identity;
@inject UserManager<AppUser> _userManager

<div asp-validation-summary="ModelOnly" class="invalid-feedback"></div>
<input type="hidden" asp-for="AppUserId" />
<div class="row gy-2 mb-3">
    <div class="col-md-4">
        <label asp-for="DisplayName" class="form-label" data-bs-toggle="tooltip" data-bs-placement="top" title="@Html.DisplayPromptFor(model => model.DisplayName)"></label>
        <input asp-for="DisplayName" class="form-control" />
        <span asp-validation-for="DisplayName" class="invalid-feedback"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="UserAdLogin" class="form-label" data-bs-toggle="tooltip" data-bs-placement="top" title="@Html.DisplayPromptFor(model => model.UserAdLogin)"></label>
        <select asp-for="UserAdLogin" class="form-control selectpicker" data-live-search="true" asp-items="ViewBag.UserAdLogin"></select>
        <span asp-validation-for="UserAdLogin" class="invalid-feedback"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="EmployeeId" class="form-label" data-bs-toggle="tooltip" data-bs-placement="top" title="@Html.DisplayPromptFor(model => model.EmployeeId)"></label>
        <input asp-for="EmployeeId" class="form-control" />
        <span asp-validation-for="EmployeeId" class="invalid-feedback"></span>
    </div>
</div>
