<div class="row gy-2 mb-3">
    <div class="col-12">
        <label asp-for="Summary" class="form-label" data-bs-toggle="tooltip" data-bs-placement="top" title="@Html.DisplayPromptFor(model => model.Summary)"></label>
        <textarea asp-for="Summary" class="form-control"></textarea>
        <span asp-validation-for="Summary" class="invalid-feedback"></span>
    </div>
</div>
<div class="row gy-2 mb-3">
    <div class="col-12">
        <label class="form-check-label" data-bs-toggle="tooltip" data-bs-placement="top" title="@Html.DisplayPromptFor(model => model.IsEnabled)">
            <input class="form-check-input" asp-for="IsEnabled" /> @Html.DisplayNameFor(model => model.IsEnabled)
        </label>
    </div>
</div>

<div class="col">
    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    <input type="reset" value="Reset" class="btn btn-outline-secondary" />
</div>

