@model List<Pk.Com.Jazz.ECP.Models.EmployeeFeedback>

@{
    ViewData["Title"] = "Feedbacks";
}

<h1 class="text-center my-4">Feedbacks</h1>

<div class="container">
    <div class="card mb-4">
        <div class="card-header">
            <h3 class="mb-0">Feedback Chart</h3>
        </div>
        <div class="card-body">
            <canvas id="feedbackChart" width="600" height="300"></canvas>
            @if (Model == null || Model.Count == 0)
            {
                <div class="text-center mt-2">No feedback data available for chart.</div>
            }
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h3 class="mb-0">Feedback Details</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive" style="height: 400px;">
                <table id="feedbackTable" class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Feedback Date</th>
                            <th>Feedback Type</th>
                            <th>Feedback</th>
                            <th>Provided By</th>
                            <th>Comments</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var feedback in Model)
                            {
                                <tr>
                                    <td>@feedback.FeedbackDate.ToShortDateString()</td>
                                    <td>@feedback.FeedbackType</td>
                                    <td>@feedback.Feedback</td>
                                    <td>@feedback.ProvidedBy</td>
                                    <td>@feedback.Comments</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">No feedback data available.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#feedbackTable').DataTable({
                "paging": true,
                "pageLength": 5,
                "lengthChange": false,
                "info": false
            });
        });

        document.addEventListener('DOMContentLoaded', function () {
            var ctx = document.getElementById('feedbackChart').getContext('2d');
            var feedbackDates = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model?.Select(f => f.FeedbackDate.ToShortDateString()).ToList() ?? new List<string>()));
            var feedbackCounts = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model?.GroupBy(f => f.FeedbackDate).Select(g => g.Count()).ToList() ?? new List<int>()));

            var feedbackChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: feedbackDates,
                    datasets: [{
                        label: 'Feedback Count',
                        data: feedbackCounts,
                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        x: {
                            title: {
                                display: true,
                                text: 'Date'
                            },
                            ticks: {
                                maxRotation: 90,
                                minRotation: 45
                            }
                        },
                        y: {
                            title: {
                                display: true,
                                text: 'Feedback Count'
                            },
                            min: 0,
                            beginAtZero: true
                        }
                    },
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top'
                        },
                        tooltip: {
                            callbacks: {
                                title: function (context) {
                                    return context[0].label;
                                },
                                label: function (context) {
                                    return `Count: ${context.raw}`;
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
}
