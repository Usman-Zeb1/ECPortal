@model Pk.Com.Jazz.ECP.Models.ECTargets

@{
    ViewData["Title"] = "Monthly Targets";

    var monthName = Model != null ? System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(Model.Month) : string.Empty;
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container mt-5">
    <h1 class="text-center mb-4">Targets - Experience Center</h1>
    <form method="get">
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <label for="regionId" class="form-label">Region</label>
                <select id="regionId" name="regionId" class="form-select" onchange="filterEcs()" data-placeholder="Select a Region" required>
                    <option value="">Select a Region</option>
                    @foreach (var region in ViewBag.Regions)
                    {
                        <option value="@region.Value">@region.Text</option>
                    }
                </select>
            </div>

            <div class="col-md-3 mb-3">
                <label for="ecId" class="form-label">Experience Center</label>
                <select id="ecId" name="ecId" class="form-select"  data-placeholder="Select an Experience Center" required>
                    <option value="">Select an Experience Center</option>
                </select>
            </div>


            <div class="col-md-3 mb-3">
                <label for="month" class="form-label">Month</label>
                <select id="month" name="month" class="form-select" data-placeholder="Select a Month" required>
                    <option></option>
                    @for (int i = 1; i <= 12; i++)
                    {
                        var monthName1 = new DateTime(2024, i, 1).ToString("MMMM");
                        <option value="@i" selected="@(i == Model?.Month)">@monthName1</option>
                    }
                </select>
            </div>

            <div class="col-md-3 mb-3">
                <label for="year" class="form-label">Year</label>
                <select id="year" name="year" class="form-select" data-placeholder="Select a Year" required>
                    <option></option>
                    @for (int i = DateTime.Now.Year; i >= DateTime.Now.Year - 5; i--)
                    {
                        <option value="@i" selected="@(i == Model?.Year)">@i</option>
                    }
                </select>
            </div>

            <div class="col-md-3 mb-3 align-self-end">
                <button type="submit" class="btn btn-primary w-100">Search</button>
            </div>
        </div>
    </form>


    @if (Model != null)
    {
        <div class="card mb-4">
            <div class="card-header text-center">
                <h3>@monthName @Model.Year Targets</h3>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-4 mb-3">
                        <div class="card shadow-sm">
                            <div class="card-header text-center">
                                Prepaid Sales Target
                            </div>
                            <div class="card-body text-center">
                                <p class="card-text display-6">@Model.ECPrepaidSaleTarget</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card shadow-sm">
                            <div class="card-header text-center">
                                Postpaid Sales Target
                            </div>
                            <div class="card-body text-center">
                                <p class="card-text display-6">@Model.ECPostpaidSaleTarget</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card shadow-sm">
                            <div class="card-header text-center">
                                Device Sales Target
                            </div>
                            <div class="card-body text-center">
                                <p class="card-text display-6">@Model.ECDeviceSaleTarget</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card shadow-sm">
                            <div class="card-header text-center">
                                M-Wallet Sales Target
                            </div>
                            <div class="card-body text-center">
                                <p class="card-text display-6">@Model.ECMWalletSaleTarget</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card shadow-sm">
                            <div class="card-header text-center">
                                4G Sales Target
                            </div>
                            <div class="card-body text-center">
                                <p class="card-text display-6">@Model.ECFourGSaleTarget</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card shadow-sm">
                            <div class="card-header text-center">
                                Rox New Sales Target
                            </div>
                            <div class="card-body text-center">
                                <p class="card-text display-6">@Model.ECRoxNewSaleTarget</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card shadow-sm">
                            <div class="card-header text-center">
                                Rox Conversion Sales Target
                            </div>
                            <div class="card-body text-center">
                                <p class="card-text display-6">@Model.ECRoxConversionSaleTarget</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card shadow-sm">
                            <div class="card-header text-center">
                                Status
                            </div>
                            <div class="card-body text-center">
                                <p class="card-text display-6">@Model.Status</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-12">
                        <canvas id="targetsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <script>
            document.addEventListener("DOMContentLoaded", function () {
                var ctx = document.getElementById('targetsChart').getContext('2d');
                var targetsChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: ['Prepaid', 'Postpaid', 'Device', 'M-Wallet', '4G', 'Rox New', 'Rox Conversion'],
                        datasets: [{
                            label: 'Sales Targets',
                            data: [
            @Model.ECPrepaidSaleTarget,
            @Model.ECPostpaidSaleTarget,
            @Model.ECDeviceSaleTarget,
            @Model.ECMWalletSaleTarget,
            @Model.ECFourGSaleTarget,
            @Model.ECRoxNewSaleTarget,
            @Model.ECRoxConversionSaleTarget
                                                                ],
                            backgroundColor: 'rgba(54, 162, 235, 0.2)',
                            borderColor: 'rgba(54, 162, 235, 1)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            });
        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.1/chart.min.js"></script>
    }
    else
    {
        <div class="alert alert-warning mt-4 text-center" role="alert">
            <strong>No targets data available for the selected time period.</strong>
        </div>
    }
</div>


@section Scripts {

    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        function filterEcs() {
            var regionId = document.getElementById('regionId').value;
            var ecSelect = document.getElementById('ecId');
            ecSelect.innerHTML = '<option value="">Select EC</option>';

            if (regionId) {
                $.ajax({
                    url: '@Url.Action("GetEcsByRegion", "Performance")',
                    data: { regionId: regionId },
                    success: function (data) {
                        data.forEach(function (ec) {
                            var option = document.createElement('option');
                            option.value = ec.value;
                            option.text = ec.text;
                            ecSelect.appendChild(option);
                        });
                    }
                });
            }

            
        }

    


        $(document).ready(function () {
            $('#ecId, #regionId, #month, #year').select2({
                width: function () {
                    return $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style';
                },
                placeholder: function () {
                    return $(this).data('placeholder');
                },
                theme: "bootstrap-5",
            });
        });



    </script>

}
