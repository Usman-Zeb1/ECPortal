@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="row">
    <div class="col-md-4">
        <section>
            <div class="display-4">@ViewData["Title"]</div>
            <form id="account" method="post">
                <p><br /><em>Use your jazz email id.</em></p>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="none" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="none" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                @* <div class="form-floating mb-3">
                <div class="checkbox">
                <label asp-for="Input.RememberMe">
                <input asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
                <div class="float-end">
                <small><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></small>
                </div>
                </div>

                </div>*@

                <div class="row gy-2 mb-3">
                    <div class="col-12">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" /> @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                        <div class="float-end">
                            <small><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></small>
                        </div>
                    </div>
                </div>


                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-8">
        <section>
            <div class="text-center">
                <img src="~/images/login-600px.png" />
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
